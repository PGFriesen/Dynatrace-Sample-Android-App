<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dynatrace.sampleAndroid.demo"
    android:versionCode="1"
    android:versionName="1.0-demo" >

    <uses-sdk
        android:minSdkVersion="28"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.dynatrace.android.app.Application"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@drawable/ic_dynatrace_shamrockgreen_700"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_dynatrace_shamrockgreen_700"
        android:supportsRtl="true"
        android:testOnly="true" >
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name="com.dynatrace.sampleAndroid.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Dynatrace.Dark" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dynatrace.sampleAndroid.AutomaticInstrumentationActivity"
            android:label="@string/title_activity_auto_instrumentation"
            android:parentActivityName="com.dynatrace.sampleAndroid.MainActivity"
            android:theme="@style/Theme.Dynatrace.Light.Uem" />
        <activity
            android:name="com.dynatrace.sampleAndroid.ManualInstrumentationActivity"
            android:label="@string/title_activity_manual_instrumentation"
            android:parentActivityName="com.dynatrace.sampleAndroid.MainActivity"
            android:theme="@style/Theme.Dynatrace.Light.Uem" />
    </application>

</manifest>